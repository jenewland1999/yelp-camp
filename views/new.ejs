<% include partials/head %>

<div class="container">
  <h1 class="text-center d-block mb-5">Create a New Campground</h1>
  <div class="row">
    <div class="col-lg-4 offset-lg-4">
      <form action="/campgrounds" method="POST">
        <div class="form-group">
          <label for="name">Campground Name</label>
          <input
            type="text"
            name="name"
            id="name"
            placeholder="Name"
            class="form-control"
            required
          />
        </div>
        <div class="form-group">
          <label for="image">Campground Image</label>
          <input
            type="text"
            name="image"
            id="image"
            placeholder="Image URL"
            class="form-control"
            required
          />
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block">Submit Campground</button>
        </div>
      </form>
      <p class="text-center">
        <a href="/campgrounds" class="text-secondary">Return to Campgrounds</a>
      </p>
    </div>
  </div>
</div>

<% include partials/foot %>
