<% include ../partials/head %>

<div class="container">
  <h1 class="text-center d-block mb-5">
    Add a Comment to <%= campground.name %>
  </h1>
  <div class="row">
    <div class="col-lg-4 offset-lg-4">
      <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
        <div class="form-group">
          <label for="author">Author Name</label>
          <input
            type="text"
            name="comment[author]"
            id="author"
            placeholder="Author name"
            class="form-control"
            required
          />
        </div>
        <div class="form-group">
          <label for="text">Comment Body</label>
          <textarea
            name="comment[text]"
            id="text"
            cols="30"
            rows="5"
            placeholder="Comment body"
            class="form-control"
            required
          ></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block">Add Comment</button>
        </div>
      </form>
      <p class="text-center">
        <a href="/campgrounds/<%= campground._id %>" class="text-secondary"
          >Return to <%= campground.name %></a
        >
      </p>
    </div>
  </div>
</div>

<% include ../partials/foot %>
